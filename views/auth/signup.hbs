<!-- TITULO -->
<h2 id="signupTitle">Registro</h2>
<!-- FORMULARIO DE REGISTRO -->
<div >
  <form  id="signup-container" action="/signup" method="POST">
    <label class="signupElement" for="input-username">Nombre de Usuario</label>
    <input class="signupElement" type="text" id="input-username" name="nombre" placeholder="Nombre usuario" />

    <label class="signupElement" for="input-email">Email</label>
    <input class="signupElement" type="email" id="input-email" name="email" placeholder="Email" />

    <label class="signupElement" for="input-password">ContraseÃ±a</label>
    <input class="signupElement" type="password" name="password" id="input-password" placeholder="********" />

    <button class="signupElement" type="submit">Crear cuenta</button>

    {{!-- error message will be added here --}}
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}

  </form>
</div>